#include <iostream>

using namespace std;

int main()
{
    int h,m,s,h1,m1,s1,x,y,z,a;
    cout << "Dame la hora de entrada en valor de 24 hrs.\n ";
    cin >> h, cin >> m; cin >> s;
    cout << " Dame la hora de salida en valor de 24 hrs. \n";
    cin >> h1; cin >> m1; cin >> s1;
    h*=3600;
    m*=60;
    x=h+m+s;
    h1*=3600;
    m1*=60;
    y=h1+m1+s1;
    a=y-x;
    z=a%60;
    y=a/60;
    x=y/60;
    y=y%60;
    cout << "La horas que trabajo son: " << x << " hrs " << y << " min " << z << " seg ";
    return 0;
}
